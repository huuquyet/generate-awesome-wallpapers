{
  "name": "generate-awesome-wallpapers",
  "description": "Generate awesome wallpapers with HuggingFace Inference API (serverless)",
  "version": "1.2.3",
  "repository": "git@github.com:huuquyet/generate-awesome-wallpapers",
  "author": "huuquyet <huuquyetng@gmail.com>",
  "bugs": {
    "url": "https://github.com/huuquyet/generate-awesome-wallpapers/issues"
  },
  "homepage": "https://github.com/marketplace/actions/generate-awesome-wallpapers",
  "license": "MIT",
  "main": "./src/index.ts",
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "all": "bun lint && bun test && bun coverage && bun package",
    "bundle": "bun lint && bun package",
    "ci-test": "bunx jest",
    "clean": "git clean -xdf",
    "coverage": "bunx make-coverage-badge --output-path ./badges/coverage.svg",
    "lint": "bunx @biomejs/biome check --apply .",
    "package": "bunx ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "package:watch": "bun package -- --watch",
    "test": "bun jest"
  },
  "dependencies": {
    "@actions/core": "^1.10.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.7.3",
    "@types/bun": "^1.1.3",
    "@types/jest": "^29.5.12",
    "@vercel/ncc": "^0.38.1",
    "jest": "^29.7.0",
    "make-coverage-badge": "^1.2.0",
    "ts-jest": "^29.1.4",
    "typescript": "^5.4.5"
  },
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": ["js", "ts"],
    "testMatch": ["**/*.test.ts"],
    "testPathIgnorePatterns": ["/node_modules/", "/dist/"],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageReporters": ["json-summary", "text", "lcov"],
    "collectCoverage": true,
    "collectCoverageFrom": ["./src/**"]
  },
  "keywords": [
    "github-actions",
    "python",
    "typescript",
    "workflows",
    "HuggingFace",
    "wallpapers",
    "text-to-image",
    "serverless"
  ]
}
