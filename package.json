{
  "name": "generate-awesome-wallpapers",
  "description": "Generate awesome wallpapers with HuggingFace Inference API (serverless)",
  "version": "1.2.1",
  "repository": "git@github.com:huuquyet/generate-awesome-wallpapers",
  "author": "huuquyet <huuquyetng@gmail.com>",
  "bugs": {
    "url": "https://github.com/huuquyet/generate-awesome-wallpapers/issues"
  },
  "homepage": "https://github.com/marketplace/actions/generate-awesome-wallpapers",
  "license": "MIT",
  "main": "src/index.ts",
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "all": "yarn lint && yarn test && yarn coverage && yarn package",
    "bundle": "yarn lint && yarn package",
    "ci-test": "yarn jest",
    "clean": "git clean -xdf",
    "coverage": "yarn make-coverage-badge --output-path ./badges/coverage.svg",
    "doctor": "yarn dlx @yarnpkg/doctor",
    "lint": "yarn dlx @biomejs/biome check --apply .",
    "package": "yarn ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "package:watch": "yarn package -- --watch",
    "test": "yarn jest",
    "update": "yarn upgrade-interactive",
    "vscode": "yarn dlx @yarnpkg/sdks vscode"
  },
  "dependencies": {
    "@actions/core": "^1.10.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.12",
    "@vercel/ncc": "^0.38.1",
    "jest": "^29.7.0",
    "make-coverage-badge": "^1.2.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.5"
  },
  "packageManager": "yarn@4.2.2",
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": ["js", "ts"],
    "testMatch": ["**/*.test.ts"],
    "testPathIgnorePatterns": ["/node_modules/", "/dist/"],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageReporters": ["json-summary", "text", "lcov"],
    "collectCoverage": true,
    "collectCoverageFrom": ["./src/**"]
  },
  "keywords": [
    "github-actions",
    "python",
    "typescript",
    "workflows",
    "HuggingFace",
    "wallpapers",
    "text-to-image",
    "serverless"
  ]
}
